@model Course
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container" style="max-width:100%;">
    <div class="row">
        <div class="col-lg-6">
            <form style="margin-left: 100px;" asp-area="Admin" asp-controller="Course" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" style="color:red;"></div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <br />
                    <span asp-validation-for="@Model.ImageFile" style="color:red;"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <br />
                    <span asp-validation-for="@Model.Name" style="color:red;"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.CategoryId" class="form-label">Catagory</label>
                    <select class="form-select mb-3 " asp-for="@Model.CategoryId">
                        <option selected>Select Catagory</option>
                        @foreach (var item in ViewBag.Catagory)
                        {
                            <option value="@item.Id">@item.Name</option>

                        }
                    </select>
                    <br />
                    <span asp-validation-for="@Model.CategoryId" style="color:red;"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.TagToCoursesId" class="form-label">Tags</label>
                    <select class="form-control mb-3 selectTwo" multiple="multiple" asp-for="@Model.TagToCoursesId">
                        @foreach (var item in ViewBag.Tags)
                        {
                            <option value="@item.Id">@item.Name</option>

                        }
                    </select>
                    <br />
                    <span asp-validation-for="@Model.TagToCoursesId" style="color:red;"></span>
                </div>
                @*<div class="mb-3">
            <label asp-for="@Model.Link" class="form-label">Link</label>
            <input class="form-control" asp-for="@Model.Link">
            <br />
            <span asp-validation-for="@Model.Link" style="color:red;"></span>
        </div>*@
                <div class="mb-3">
                    <label asp-for="@Model.Content" class="form-label">Content</label>
                    <textarea class="form-control" asp-for="@Model.Content" rows="3"></textarea>
                    <br />
                    <span asp-validation-for="@Model.Content" style="color:red;"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="Admin" asp-controller="Course" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>

