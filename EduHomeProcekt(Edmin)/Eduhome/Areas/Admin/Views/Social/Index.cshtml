@model List<Social>
@*@inject IHttpContextAccessor HttpContextAccessor*@
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container" style="width: 100%;">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Social" asp-action="Create">Create</a>
        </div>
        @*<div class="col-lg-12">
            @if (HttpContextAccessor.HttpContext.Session.GetString("NullIdError")!="null")
            {
                <div class="alert alert-danger">
                    @HttpContextAccessor.HttpContext.Session.GetString("NullIdError")
                </div>

                HttpContextAccessor.HttpContext.Session.SetString("NullIdError", "null");
            }
        </div>*@
        <hr />
        <div class="col-lg-12 mt-5">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Icon</th>
                        <th scope="col">Link</th>
                        <th scope="col"></th>
                    </tr>   
                </thead>
                <tbody>
                    @{ int i = 0;
                        foreach (var item in Model)
                        {
                            i++;
                            <tr>
                                <th scope="row">@i</th>
                                <td>@item.Name</td>
                                <td>@item.Icon</td>
                                <td>@item.Link</td>
                                <td>
                                    <a class="btn btn-success" asp-area="Admin" asp-controller="Social" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Social" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Deqiq silmek isteyirsen Qaqaa(Bax silirem haaaaa)?')">Delete</a>
                                </td>

                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

